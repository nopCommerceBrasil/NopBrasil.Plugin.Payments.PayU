@model NopBrasil.Plugin.Payments.PayU.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="PaymentPayU" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <a href="http://www.nopcommercebrasil.com"><img src="/Plugins/Payments.PayU/Content/Images/nopCommerceBrasil.png"></a>
                    <br />
                    <p>
                        Este plugin foi desenvolvido por <a href="http://www.nopcommercebrasil.com">NopCommerce Brasil - http://www.nopcommercebrasil.com</a><br />
                        Em caso de dúvidas ou problemas por favor entre em contato conosco através do email <a href="mailto:nopcommercebrasil@nopcommercebrasil.com" target="_top">nopcommercebrasil@nopcommercebrasil.com</a><br />
                        Este plugin é open-source e seu código-fonte está disponível no <a href="https://github.com/nopCommerceBrasil">GitHub do NopCommerce Brasil</a> no repositório <a href="https://github.com/nopCommerceBrasil/NopBrasil.Plugin.Payments.PayU">NopBrasil.Plugin.Payments.PayU</a>
                    </p>
                    <br />
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="EmailPayU" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="EmailPayU" />
                        <span asp-validation-for="EmailPayU"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="PaymentMethodDescription" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PaymentMethodDescription" />
                        <span asp-validation-for="PaymentMethodDescription"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>